CC = {CC}
CFLAGS = -Wall -O2 -g -I.
LDFLAGS = -lm
PREFIX = {PREFIX}
MODULES = jobqueue.o schedule.o vplist.o

jobqueue:	$(MODULES)
	$(CC) $(CFLAGS) $(LDFLAGS) -o $@ $(MODULES)

%.o:	%.c
	$(CC) $(CFLAGS) -c $<

jobqueue.o:	jobqueue.c jobqueue.h vplist.h schedule.h version.h
schedule.o:	schedule.c schedule.h jobqueue.h vplist.h
vplist.o:	vplist.c vplist.h

install:	jobqueue
	install jobqueue "$(PREFIX)/bin/"

check:	
	./selftest.sh

clean:	
	rm -f jobqueue *.o
